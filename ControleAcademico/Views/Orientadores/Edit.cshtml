@model ControleAcademico1.Models.Orientadores
@{
    ViewData["Title"] = "Editar Orientadores";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <form asp-action="Edit" class="shadow-lg p-4 bg-light rounded">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Curso" class="form-label"></label>
                    <input asp-for="Curso" class="form-control" />
                    <span asp-validation-for="Curso" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Salvar Alterações</button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
